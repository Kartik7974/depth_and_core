<div class="login-form">
  <h2>Log In</h2>

  <%= form_for :session, url: login_path do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="actions">
      <%= f.submit "Log In" %>
    </div>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div> 